# ===========================================
# Guest Relations AI App - Backend Configuration
# ===========================================
# Copy this file to .env and update with your actual values

# ===========================================
# Database Configuration
# ===========================================
# Supabase PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/guest_relations

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# ===========================================
# AI Configuration
# ===========================================
# OpenAI API key for document processing and chat features
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Security Configuration
# ===========================================
# JWT secret key for authentication (use a strong, random string)
SECRET_KEY=your_jwt_secret_key_here

# ===========================================
# Environment Configuration
# ===========================================
# Environment: development, staging, production
ENVIRONMENT=development

# ===========================================
# CORS Configuration
# ===========================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# ===========================================
# Logging Configuration
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# Optional: Render Configuration
# ===========================================
# Render external hostname (automatically set by Render)
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# ===========================================
# Optional: Additional Configuration
# ===========================================
# Email configuration (if implementing email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# File upload limits
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# ALLOWED_FILE_TYPES=pdf,docx,doc

